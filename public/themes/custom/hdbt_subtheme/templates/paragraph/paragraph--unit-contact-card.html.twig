<div class="component component--content-liftup">
  <div class="component__container">
    <div class="component__content">
      {% block component_content %}
        {% if unit_contact_card.picture_url_override|render or unit_contact_card.picture_url|render %}
          {% set has_image = TRUE %}
        {% endif %}

        {%
          set picture_classes = [
          'content-liftup__image',
          has_image ? 'content-liftup__image--image' : 'content-liftup__image--placeholder'
        ]
        %}

        {% set image_attributes = create_attribute() %}
        <div class="content-liftup">
          <div{{ image_attributes.addClass(picture_classes) }}>
            {% if unit_contact_card.picture_url_override|render %}
              {{ unit_contact_card.picture_url_override }}
            {% elseif unit_contact_card.picture_url|render %}
              {{ unit_contact_card.picture_url }}
            {% endif %}
          </div>

          <div class="content-liftup__text">
            <div class="content-liftup__text__container">
              <h3 class="content-liftup__title">
                {{ unit_contact_card.title }}
              </h3>

              <div class="content-liftup__info">
                {% if unit_contact_card.address|render %}
                  <div class="content-liftup__info-row content-liftup__info-row--address">
                    <div class="content-liftup__info-row__title">{{ 'Visiting address'|t }}:</div>
                    <div class="content-liftup__info-row__content">{{ unit_contact_card.address }}</div>
                  </div>
                {% endif %}

                {% if unit_contact_card.address_postal|render %}
                  <div class="content-liftup__info-row content-liftup__info-row--postal-address">
                    <div class="content-liftup__info-row__title">{{ 'Postal address'|t }}:</div>
                    <div class="content-liftup__info-row__content">{{ unit_contact_card.address_postal }}</div>
                  </div>
                {% endif %}

                {% if unit_contact_card.phone|render %}
                  <div class="content-liftup__info-row content-liftup__info-row--phone">
                    <div class="content-liftup__info-row__title">{{ 'Telephone number'|t }}:</div>
                    <div class="content-liftup__info-row__content">{{ unit_contact_card.phone }}</div>
                  </div>
                {% endif %}

                {% if unit_contact_card.opening_hours|render %}
                  <div class="content-liftup__info-row content-liftup__info-row--opening-hours">
                    <div class="content-liftup__info-row__title">{{ 'Opening hours'|t }}:</div>
                    <div class="content-liftup__info-row__content">{{ unit_contact_card.opening_hours }}</div>
                  </div>
                {% endif %}

                {% if unit_contact_card.details|render %}
                  <div class="content-liftup__info-row content-liftup__info-row--more-info">
                    <div class="content-liftup__info-row__title">{{ 'Additional details'|t }}:</div>
                    <div class="content-liftup__info-row__content">{{ unit_contact_card.details }}</div>
                  </div>
                {% endif %}
              </div>
            </div>

            {% if unit_contact_card.unit_url %}
              <div class="content-liftup__read-more">
                {% set link_attributes = { 'class': [ 'unit__link', ], } %}
                {{ link('See details'|t, unit_contact_card.unit_url, unit_link_attributes) }}
              </div>
            {% endif %}
          </div>
        </div>
      {% endblock %}
    </div>
  </div>
</div>
